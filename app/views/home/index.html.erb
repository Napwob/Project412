<% name = current_user.present? ? current_user.name : 'Stranger'%>
<h1 align="center">VALERA</h1>
<p align="center">BEST GAME EVER</p>
<h2 align="center">Welcome <%= name %></h2>
<% if user_signed_in? %>
	<h3 align="center"> 
		<button class="nav-item">
			<%= link_to "Game", "/game", class:'nav-link'%>
		</button>
	</h3>
<%else%>
	<h3 align="center"> 
		<button class="nav-item">
			<%= link_to "Please, sign in to play", "/users/sign_in", class:'nav-link'%>
		</button>
	</h3>
<% end %>

